extends layout
block content
  h1 User Profile
  body
    if userForm
      h2 User Information
    .user-info 
    if userForm.name
           p <strong> Name:</strong> #{userForm.name}
    if userForm.email
           p <strong> Email:</strong> #{userForm.email}
            if userForm.number
           p <strong> Number:</strong> #{userForm.number}
     if userForm.address
           p <strong> address:</strong> #{userForm.address}
    else
      h3 Error!
      

   
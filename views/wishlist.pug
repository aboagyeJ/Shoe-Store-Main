extends layout

block content
  h1 Wishlist

  nav
    a(href="/men") Men
    |  |
    a(href="/women") Women
    |  |
    a(href="/kids") Kids
    |  |
    a(href="/cart") Cart
    |  |
    a(href="/wishlist") Wishlist
    |  |
    a(href="/") Home
    |  |
    a(href="/contact") Contact

  if wishlistItems && wishlistItems.length > 0
    table.wishlist-table
      thead
        tr
          th Item
          th Price
          th Actions
      tbody
        each item in wishlistItems
          tr
            td.item-info
              a(href=`/product/${item.product._id}`)
                if item.product.image
                  img(src=`/images/${item.product.image}`, alt=item.product.name, width="50")
              span.item-name
                a(href=`/product/${item.product._id}`) #{item.product.name}
            td $#{item.product.price}
            td
              button.add-to-cart(data-product-id=item.product._id) Add to Cart
              a(href=`/wishlist/remove/${item.product._id}`) Remove

  else
    p Your wishlist is currently empty.
    a(href="/") Browse Products
    
  footer
    p &copy; 2025 The Best Shoe Store in the World